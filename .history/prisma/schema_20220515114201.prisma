// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(cuid())
  userName      String?
  email         String
  photoUrl      String?
  role          String?
  address       String?
  companyId     String
  storeImageUrl String?
  staffImageUrl String?

  @@map(name: "users")
}

model Time {
  id        String @id @default(cuid())
  companyId String
  number    Int[]
}

model Reserve {
  companyId   String
  id          String   @id @default(cuid())
  staff       String
  reserver    String?
  date        DateTime
  time        Int
  reserved    Boolean  @default(false)
  createAt    DateTime @default(now())
  senderUid   String?
  reserverUid String?
  email       String?
  phoneNumber Int?
}
